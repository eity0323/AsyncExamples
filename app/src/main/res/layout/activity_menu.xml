<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rosshambrick.asyncexamples.MenuActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an example"/>

    <Button
        android:id="@+id/activity_async_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity Async Task" />

    <Button
        android:id="@+id/fragment_async_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment Async Task" />

    <Button
        android:id="@+id/fragment_rxandroid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment RxAndroid" />

</LinearLayout>
